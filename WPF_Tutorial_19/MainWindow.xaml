<Window x:Class="WPF_Tutorial_19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tutorial_19"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <StackPanel>
            <Button Name="btnNormal" Content="Normal" 
                    Width="100" Height="40" Margin="5"
                    Click="btnNormal_Click"/>
            <Button Name="btnModel" Content="Modal" 
                    Width="100" Height="40" Margin="5"
                    Click="btnModel_Click"/>
            <TextBox Name="txtInput" Width="200" Height="40" Text=""/>
        </StackPanel>
    </Grid>
</Window>
