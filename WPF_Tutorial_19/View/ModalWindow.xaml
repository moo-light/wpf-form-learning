<Window x:Class="WPF_Tutorial_19.View.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Tutorial_19.View"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Title="ModalWindow" Height="auto" Width="auto">
    <Grid>
        <StackPanel>
            <TextBox Name="txtInput" Margin="5" Height="30"
                      TextChanged="txtInput_TextChanged"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnOk" Content="OK" Click="btnOk_Click"
                        Margin="10" Width="100" Height="40"/>

                <Button Name="btnCancel" Content="Cancel" Click="btnCancel_Click"
                        Margin="10" Width="100" Height="40"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
